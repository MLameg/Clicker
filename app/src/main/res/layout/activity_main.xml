<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/roundLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Round:"
                android:textSize="25dp"
                android:gravity="center" />
            <NumberPicker
                android:id="@+id/numberPicker_min"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:theme="@style/NumberPickerText" />
            <NumberPicker
                android:id="@+id/numberPicker_sec"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:theme="@style/NumberPickerText" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/breakLayout"
        android:layout_below="@+id/roundLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Break:"
                android:textSize="25dp"
                android:gravity="center" />
            <NumberPicker
                android:id="@+id/breakPicker_min"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:theme="@style/NumberPickerText" />
            <NumberPicker
                android:id="@+id/breakPicker_sec"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:theme="@style/NumberPickerText" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numRoundLayout"
        android:layout_below="@+id/breakLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Number of Rounds:"
                android:textSize="25dp"
                android:gravity="center" />
            <NumberPicker
                android:id="@+id/numRoundPicker_min"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:theme="@style/NumberPickerText" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Press" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>